{
  "type": "page",
  "title": "编辑任务 ${params.id}",
  "body": [
    {
      "type": "form",
      "initApi": "get:http://api.hulu4.com/api/v1/job/get?job_id=${params.id}",
      "api": "post:http://api.hulu4.com/api/v1/job/update",
      "redirect": "/job/list",
      "body": [
        {
          "type": "input-text",
          "name": "name",
          "label": "任务名称",
          "required": true,
          "inline": false,
          "description": "",
          "descriptionClassName": "help-block",
          "placeholder": "",
          "addOn": null
        },
        {
          "type": "divider"
        },
        {
          "type": "input-text",
          "name": "desc",
          "label": "任务描述",
          "required": true
        },
        {
          "type": "divider"
        },
        {
          "type": "textarea",
          "name": "command",
          "label": "命令",
          "required": true
        },
        {
          "type": "divider"
        },
        {
          "type": "textarea",
          "name": "work_path",
          "label": "工作路径",
          "required": true
        }
      ]
    }
  ],
  "remark": null,
  "toolbar": [
    {
      "type": "button",
